<h1>New Post</h1>

<%= form_for(@post) do |f| %>
  <div>
    <p>
      <h2><%= f.label :title %></h2>
    </p>
    <p>
      <%= f.text_field :title %>
    </p>
  </div>

  <div>
    <p>
      <h2><%= f.label :text %></h2>
    </p>
    <p>
      <%= f.text_area :text, size: "25x15" %>
    </p>
  </div>
<% end %>
