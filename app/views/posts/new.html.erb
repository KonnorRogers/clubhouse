<h1>New Post</h1>

<% if @post.errors.any? %>
  <div>
    The form contains <%= pluralize(@post.errors.count, "error") %>
  </div>
  <div>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@post) do |f| %>
  <div>
    <p>
      <h2><%= f.label :title %></h2>
    </p>
    <p>
      <%= f.text_field :title %>
    </p>
  </div>

  <div>
    <p>
      <h2><%= f.label :text %></h2>
    </p>
    <p>
      <%= f.text_area :text, size: "25x15" %>
    </p>
  </div>

  <p><%= f.submit "Create post!" %></p>
<% end %>
